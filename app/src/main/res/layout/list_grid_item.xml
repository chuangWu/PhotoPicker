<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="true"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/all_ct"
        android:paddingLeft="3px"
        android:paddingRight="1px"
        android:paddingTop="4px"
        >

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:cropToPadding="true"
            android:padding="2dp"
            android:scaleType="centerCrop" />
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/image_item"
            android:layout_alignTop="@+id/image_item"
            android:layout_alignRight="@+id/image_item"
            android:layout_alignBottom="@+id/image_item"
            android:background="#99000000"
            android:visibility="gone"
            android:id="@+id/tv_checked_bg"
            android:textSize="14sp"
            android:gravity="right|bottom"
            android:paddingBottom="2dp"
            android:paddingRight="2dp"
            android:textColor="#ffffff"
            />
        
        <CheckBox android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:drawablePadding="0dp"
            android:padding="0dp"
            android:gravity="center"
            android:id="@+id/checkbox"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/bottom_ct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_item"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/tv_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingLeft="2px"
        android:paddingRight="2px"
        android:paddingTop="4px"
        android:id="@+id/all_ct2"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:cropToPadding="true"
            android:padding="2dp"
            android:scaleType="centerCrop" />
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/image_item_2"
            android:layout_alignTop="@+id/image_item_2"
            android:layout_alignRight="@+id/image_item_2"
            android:layout_alignBottom="@+id/image_item_2"
            android:background="#99000000"
            android:visibility="gone"
            android:id="@+id/tv_checked_bg2"
            android:textSize="14sp"
            android:gravity="right|bottom"
            android:paddingBottom="2dp"
            android:paddingRight="2dp"
            android:textColor="#ffffff"
            />
        
        <CheckBox android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:drawablePadding="0dp"
            android:padding="0dp"
            android:gravity="center"
            android:id="@+id/checkbox_2"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/bottom_ct_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/image_item_2"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/tv_info_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_info2_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:id="@+id/all_ct3"
        android:paddingLeft="1px"
        android:paddingRight="3px"
        android:paddingTop="4px"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image_item_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:cropToPadding="true"
            android:padding="2dp"
            android:scaleType="centerCrop" />
        
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/image_item_3"
            android:layout_alignTop="@+id/image_item_3"
            android:layout_alignRight="@+id/image_item_3"
            android:layout_alignBottom="@+id/image_item_3"
            android:background="#99000000"
            android:visibility="gone"
            android:id="@+id/tv_checked_bg3"
            android:textSize="14sp"
            android:gravity="right|bottom"
            android:paddingBottom="2dp"
            android:paddingRight="2dp"
            android:textColor="#ffffff"
            />
        
        <CheckBox android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:drawablePadding="0dp"
            android:padding="0dp"
            android:gravity="center"
            android:id="@+id/checkbox_3"
            android:visibility="gone"
            />

        <LinearLayout
            android:id="@+id/bottom_ct_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/image_item_3"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="4dp"
            android:paddingTop="2dp" >

            <TextView
                android:id="@+id/tv_info_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_info2_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
    
</LinearLayout>